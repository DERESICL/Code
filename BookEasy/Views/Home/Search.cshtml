@model BookEasy.Models.Holidayhome

@{
    ViewBag.Title = "Search For Holiday Home By Country";
}

<h2>Search By Country</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <p>BookEasy has Apartmnets and Villas in many different countries. To view our list just enter the country below.</p>
        <br />
        <legend>Enter Country:</legend>


        <div class="editor-field">
            @Html.EditorFor(model => model.country)
            @Html.ValidationMessageFor(model => model.country)
        </div>
       <img src="@Url.Content("~/Content/themes/base/images/poolatnight.jpg")" style="max-width: 275px; max-height: 183px; float: right;" alt="Pool"; />
        <p>
            <input type="submit" value="Search" />
        </p>

      <p>   @Html.ActionLink("Search", "Index", new { country=Model.country }) </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Home page", "Index")
</div>


